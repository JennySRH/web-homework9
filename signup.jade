doctype html
html 
    head
        meta(http-equiv="Content-Type",content="text/html; charset=utf-8")
        link(rel='stylesheet' href='style.css')
        script(type="text/javascript" src="http://hovertree.com/ziyuan/jquery/jquery-1.11.3.min.js")
        script(type="text/javascript" src="validator.js")
        script(type="text/javascript" src="signup.js")
        title 注册
    body
        div.space
        h1 注册用户
        form(method = 'post')
            if error
                div.error!=error
            div.signup-container
                div.username
                    label(for='username') 用户名
                    input(id='username' name='username' value=user.username)
                    div.error_display
                        span.error

                div.sid
                    label(for='sid')  学号
                    input(id='sid' name='sid' value=user.sid)
                    div.error_display
                        span.error

                div.phone
                    label(for='phone')  电话
                    input(id='phone' name='phone' value=user.phone)
                    div.error_display
                        span.error

                div.email
                    label(for='email')  邮箱
                    input(id='email' name='email' value=user.email)
                    div.error_display
                        span.error

                div.buttons
                    input.button.reset(type = 'reset' value = '重置')
                    input.button.submit(type = 'submit' value = '提交')